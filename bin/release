#!/usr/bin/env bash
# bin/release <build-dir>

BUILD_DIR=$1

. $(dirname $0)/common

PAX_HOME=/app/.buildpack/pax-runner-$PAX_VER

cat <<EOF
---
config_vars:
  PAX_HOME: $PAX_HOME
  PATH: /usr/local/bin:/usr/bin:/bin:$PAX_HOME/bin
  JAVA_OPTS: -Xmx384m -Xss512k -XX:+UseCompressedOops
  OSGI_FW: felix
  OSGI_FW_VER: 4.0.2
  PROVISIONING_URL: scandir:bundles
addons:
  shared-database:5mb
default_process_types:
  web: pax-run.sh --platform=\$OSGI_FW --version=\$\{OSGI_FW_VER\} --console=false --vmo="-Dorg.osgi.service.http.port=\$PORT" $PROVISIONING_URL 

EOF
